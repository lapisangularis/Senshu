<!DOCTYPE html>
<html lang="en">
{% block head %}
    <head>
        <meta charset="utf-8">
        <title>Senshu Imageboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
{% endblock %}

{% block body %}
    <body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            {% block navbar %}
                <div class="navbar-header">
                    <a href="../" class="navbar-brand">Senshu Imageboard</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ middleware.generateUrl('IndexController::versionAction') }}">Version</a>
                        </li>
                        <li>
                            <a href="{{ middleware.generateUrl('IndexController::testAction', {'text': 'test'}) }}">TestGET</a>
                        </li>
                    </ul>
                </div>
            {% endblock %}
        </div>
    </div>

    <div class="container">
        {% block content %}
        {% endblock %}

        <footer>
            {% block footer %}
                <div class="row">
                    <div class="col-lg-12">
                        <p>Senshu Imageboard (c) lapisangularis 2016 created with OphagaCore</p>
                    </div>
                </div>
            {% endblock %}
        </footer>
    </div>

    </body>
{% endblock %}
</html>
